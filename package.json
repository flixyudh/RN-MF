{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "turbo run start",
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "prettier": "^3.1.1",
    "turbo": "^2.7.2"
  },
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">=18"
  },
  "name": "flix-monorepo"
}
